     HashKnownHosts no
     NoHostAuthenticationForLocalhost yes
     ControlMaster auto
     ControlPath ~/.ssh/sock/%r@%h:%p
     VisualHostKey yes
     #ProxyCommand monkeysphere ssh-proxycommand %h %p

