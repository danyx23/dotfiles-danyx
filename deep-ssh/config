host localhost
     StrictHostKeyChecking no
     UserKnownHostsFile /dev/null

host *.local
     AddressFamily inet
     CheckHostIP no

host *.42.lefant.net
     #AddressFamily inet6
     user danyx

host *.danyx.com *.danielbachler.com
     user danyx

host *
     HashKnownHosts no
     NoHostAuthenticationForLocalhost yes
     ControlMaster auto
     ControlPath ~/.ssh/sock/%r@%h:%p
     VisualHostKey yes     
     ServerAliveInterval 900
