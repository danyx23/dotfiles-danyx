host *
     HashKnownHosts no
     NoHostAuthenticationForLocalhost yes
     ControlPath ~/.ssh/sock/%r@%h:%p
     ControlMaster auto

host localhost
     StrictHostKeyChecking no
     UserKnownHostsFile /dev/null

host *.local
     AddressFamily inet

host hip* hop* hep* al* wave*
     user root

host rd01* srv2*
     port 55022

host keisanki.net
     port 22007

host heraklit*
     port 22222

host vpn-* bar-*
     user root
