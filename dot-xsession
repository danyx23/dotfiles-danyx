. $HOME/.common.sh

# proper keyboard settings
setxkbmap dvorak -option compose:ralt -option compose:rwin -option ctrl:nocaps

# no sound, no blanking
xset s off
xset b off


BROWSER=$(find_best chromium-browser google-chrome firefox opera x-www-browser)
SCREENSAVER=$(find_best gnome-screensaver xscreensaver)
WINDOW_MANAGER=$(find_best xmonad ratpoison fluxbox openbox blackbox wmaker x-window-manager)

STD_APPS="urxvt $BROWSER $SCREENSAVER"


# host dependent wm/session and startup things
case `hostname` in
    nix)
        launch_all $STD_APPS
        exec $WINDOW_MANAGER
        ;;
    tul)
        #STD_APPS="${STD_APPS} nm-applet xfce4-panel"
        gnome-session
        ;;
    hecht)
        #STD_APPS="${STD_APPS} nm-applet xfce4-panel"
        xfce4-panel &
        chromium-browser &
        gnome-terminal &
	~/.bin/xplanet.sh &
	gnome-screensaver &
	gnome-sound-applet &
	sh -c "sleep 2 && /home/fabian/.bin/dropbox.py start" &
	xmonad
        ;;
    archon)
        #STD_APPS="${STD_APPS} nm-applet xfce4-panel"
        xfce4-panel &
        chromium-browser &
        gnome-terminal &
	gnome-screensaver &
	gnome-sound-applet &
	sh -c "sleep 2 && /home/lefant/.bin/dropbox.py start" &
	xmonad
        ;;
    mu)
        #STD_APPS="${STD_APPS} nm-applet xfce4-panel"
        gnome-session
        ;;
    *)
        echo "new host here"
        ;;
esac
